<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Brand chip -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@color/material_dynamic_secondary95"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="PawPal"
            android:textColor="@color/textPrimary"
            android:textStyle="bold" />

        <TextView
            android:text="@string/signup_title"
            android:textColor="@color/textPrimary"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Set up your pet-friendly account to shop, book, and care."
            android:textColor="@color/inputHint"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Name -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/PawPal.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:boxBackgroundMode="filled">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etName"
                android:hint="@string/name_label"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/inputHint"
                android:inputType="textPersonName"
                android:imeOptions="actionNext"
                android:autofillHints="name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/PawPal.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundMode="filled">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:hint="@string/email_label"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/inputHint"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:autofillHints="emailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password with toggle -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/PawPal.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundMode="filled"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:hint="@string/password_label"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/inputHint"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:autofillHints="password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Primary action -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignUp"
            android:text="@string/signup_btn"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- OR divider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/muted"/>

            <TextView
                android:text="@string/or"
                android:textColor="@color/inputHint"
                android:layout_marginHorizontal="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/muted"/>
        </LinearLayout>

        <!-- Secondary action (outlined style via attr) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinueAsGuest"
            style="?attr/materialButtonOutlinedStyle"
            android:text="Continue without account"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Switch to sign in -->
        <TextView
            android:id="@+id/tvSwitchToSignIn"
            android:text="@string/have_account"
            android:textColor="@color/textPrimary"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
